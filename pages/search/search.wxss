.search{
  position:fixed;
  top:0;
  left:0;
  width:100%;
  background: #ccc;
  height:90rpx;
  padding:0 24rpx;
  box-sizing: border-box;
  z-index:9999;
}
 .search_icon{
  position:absolute;
  left:15rpx;
  top:15rpx;
  height:40rpx;
  width:40rpx;
  padding:10rpx 20rpx;  
  z-index:9999;
} 
.close_icon{
  position:absolute;
  right:15rpx;
  top:15rpx;
  height:40rpx;
  width:40rpx;
  padding:10rpx 20rpx;  
  z-index:9999;
} 
.search-input{
  background: #fff;
  height:60rpx;
  margin-top:15rpx;
  border-radius: 8rpx;
  font-size:26rpx;
  padding-left:60rpx;
}
.search-history{
  margin-top:30rpx;
}
.history-title{
  font-family: PingFangSC-Medium;
  font-size: 16px;
  color: #333333;
  letter-spacing: 0;
  height:44rpx;
  line-height:44rpx;
}
.history-list-item{
  display: inline-block;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #888888;
  letter-spacing: 0;
  height:68rpx;
  line-height:68rpx;
  background: #F6F6F6;
  border-radius: 2px;
  padding:12rpx 30rpx;
  margin-right:24rpx;
  word-break:normal;
  margin-top:24rpx;
}
.label-wrapper{
  margin:36rpx auto 0 auto;
  position:relative;
}
.title{
  font-family: PingFangSC-Semibold;
  height:56rpx;
  line-height:56rpx;
  font-size:32rpx;
  color: #000000;
  letter-spacing: 0;  
}
.article{
  margin-top:110rpx;
}
.article-item{
  padding:20rpx 0;
  border-bottom:1px solid rgba(0,0,0,0.1);
}
.article-item-pic{
  flex: 0 0 100rpx;
  width:100rpx;
  height:120rpx;
  text-align: right;
}
.article-item-pic image{
  width:100rpx;
  height:100%;
  border-radius:4rpx;
}
.article-item-content{
  display: flex;
  position:relative;
  height:120rpx;
}
.article-item-content-title{
  display: block; 
  font-family: PingFangSC-Semibold;
  font-size: 28rpx;
  font-weight: bold;
  word-break: normal;
  display: -webkit-box;
  -webkit-line-clamp: 1; 
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.key-word{
  display: inline-block;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
}
.key-word-item{
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color:#666;
  display: inline-block;
  margin-right:20rpx;
}
.article-item-content-outline{
  flex:1;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  line-height:40rpx;
  word-break: normal;
  display: -webkit-box;
  -webkit-line-clamp: 2; 
  -webkit-box-orient: vertical;
  overflow: hidden;
  padding-right:24rpx;
}
.article-item-content-time{
   position:absolute;
   bottom:0;
   left:30rpx;
   font-family: PingFangSC-Regular;
   font-size:24rpx;
   color:#999;
}
.article-info{
  display: flex;
  margin-top:20rpx;
}
.article-info-author{
  flex:1;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  word-break: normal;
  display: -webkit-box;
  -webkit-line-clamp: 1; 
  -webkit-box-orient: vertical;
  overflow: hidden;
  color:#666;
}
.article-info-origin{
  flex:1;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  word-break: normal;
  display: -webkit-box;
  -webkit-line-clamp: 1; 
  -webkit-box-orient: vertical;
  overflow: hidden;
  color:#666;
}
.article-info-title{
  flex:1;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  word-break: normal;
  display: -webkit-box;
  -webkit-line-clamp: 1; 
  -webkit-box-orient: vertical;
  overflow: hidden;
  color:#666;
}
.no-search-result{
  display: block;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #000000;
  letter-spacing: 0;
  margin-top:200rpx;
  text-align:center;
}
.loading{
  height:80rpx;
  text-align: center;
}
.loading-icon{
  width:30rpx;
  height:30rpx;
  vertical-align: middle;
  margin-right:10rpx;
}
.loading-text{
  font-family: PingFangSC-Regular;
  font-size:24rpx;
  height:80rpx;
  line-height:80rpx;
  vertical-align: middle;
}